<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="379dp"
            android:layout_height="170dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/restaurantImage"
                android:layout_width="84dp"
                android:layout_height="59dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/divider"
                android:padding="4dp" />

            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/restaurantImage"
                android:text="Restaurant Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/restaurantName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/restaurantImage"
                android:text="Location"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/items"
                android:layout_width="257dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/restaurantImage"
                android:text="Item Names"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="45dp"
                android:layout_toEndOf="@+id/restaurantImage"
                android:text="Order Date"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date1"
                android:layout_marginTop="-45dp"
                android:layout_toEndOf="@+id/restaurantImage"
                android:text="Total Amount" />

            <TextView
                android:id="@+id/status"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total"
                android:layout_toEndOf="@+id/restaurantImage"
                android:text="Status" />

            <TextView
                android:id="@+id/repeat"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/total"
                android:layout_marginEnd="39dp"
                android:text="Repeat Order" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/restaurantImage"
                android:layout_below="@+id/total"
                android:text="Status-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/restaurantImage"
                android:layout_below="@+id/date1"
                android:layout_marginTop="-45dp"
                android:text="Amount-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/restaurantImage"
                android:layout_below="@+id/items"
                android:layout_marginTop="0dp"
                android:text="Date-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/restaurantImage"
                android:layout_centerVertical="true"
                android:text="Items-"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>